execute pathogen#infect()

syntax on
filetype plugin indent on

set background=dark

colorscheme gruvbox

set guifont=Monaco:h14

set number
set encoding=utf8

set expandtab
set smarttab
set shiftwidth=2
set tabstop=2

set ruler
set cmdheight=2

map <leader>tn :tabnew<cr>
map <leader>to :tabonly<cr>
map <leader>tc :tabclose<cr>
map <leader>tm :tabmove
