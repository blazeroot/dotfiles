execute pathogen#infect()

syntax on
filetype plugin indent on

set background=dark

color dracula

set number
set encoding=utf8

set expandtab
set smarttab
set shiftwidth=2
set tabstop=2

set ruler
set cmdheight=2

set pastetoggle=<F2>

map <leader>tn :tabnew<cr>
map <leader>to :tabonly<cr>
map <leader>tc :tabclose<cr>
map <leader>tm :tabmove
